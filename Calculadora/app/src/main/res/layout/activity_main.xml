<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ffernandezz.calculadora.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:id="@+id/editText"
        android:background="#faf7f7"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:allowUndo="false"
        android:editable="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38pt"
        android:id="@+id/linearLayout2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout">

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="7"
            android:id="@+id/button7"
            android:background="#0a0a0a"
            android:gravity="fill"
            android:textColor="#f9f4f4"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:onClick="onClick" />

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="8"
            android:id="@+id/button8"
            android:background="#0a0a0a"
            android:gravity="fill"
            android:textColor="#f9f4f4"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:onClick="onClick" />

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="9"
            android:id="@+id/button9"
            android:background="#0a0a0a"
            android:gravity="fill"
            android:textColor="#f9f4f4"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:onClick="onClick" />

        <Button
            android:layout_width="55pt"
            android:layout_height="35pt"
            android:text="/"
            android:id="@+id/buttonDiv"
            android:background="#a8a3a3"
            android:gravity="fill"
            android:textColor="#f9f4f4"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:onClick="onAdd" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38pt"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/linearLayout2"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="4"
            android:id="@+id/button4"
            android:gravity="fill"
            android:textColor="#fbf8f8"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#0d0c0c"
            android:onClick="onClick" />

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="5"
            android:id="@+id/button5"
            android:gravity="fill"
            android:textColor="#fbf8f8"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#0d0c0c"
            android:onClick="onClick" />

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="6"
            android:id="@+id/button6"
            android:gravity="fill"
            android:textColor="#fbf8f8"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#0d0c0c"
            android:onClick="onClick" />

        <Button
            android:layout_width="55pt"
            android:layout_height="35pt"
            android:text="*"
            android:id="@+id/buttonMult"
            android:gravity="fill"
            android:textColor="#fbf8f8"
            android:textSize="20pt"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="#a8a3a3"
            android:onClick="onAdd" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38pt"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout4"
        android:layout_below="@+id/linearLayout3"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="1"
            android:id="@+id/button1"
            android:background="#0a0909"
            android:gravity="fill"
            android:textAlignment="center"
            android:textColor="#f9f5f5"
            android:textSize="20pt"
            android:textStyle="bold"
            android:onClick="onClick" />

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="2"
            android:id="@+id/button2"
            android:background="#0a0909"
            android:gravity="fill"
            android:textAlignment="center"
            android:textColor="#f9f5f5"
            android:textSize="20pt"
            android:textStyle="bold"
            android:nestedScrollingEnabled="false"
            android:onClick="onClick" />

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="3"
            android:id="@+id/button3"
            android:background="#0a0909"
            android:gravity="fill"
            android:textAlignment="center"
            android:textColor="#f9f5f5"
            android:textSize="20pt"
            android:textStyle="bold"
            android:onClick="onClick" />

        <Button
            android:layout_width="55pt"
            android:layout_height="35pt"
            android:text="-"
            android:id="@+id/buttonDiv"
            android:background="#a8a3a3"
            android:gravity="fill"
            android:textAlignment="center"
            android:textColor="#f9f5f5"
            android:textSize="20pt"
            android:textStyle="bold"
            android:onClick="onAdd" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="38pt"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout4"
        android:layout_alignParentRight="true">

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="0"
            android:id="@+id/button0"
            android:gravity="fill"
            android:textAlignment="center"
            android:textColor="#fbf7f7"
            android:textStyle="bold"
            android:background="#0b0a0a"
            android:textSize="20pt"
            android:onClick="onClick" />

        <Button
            android:layout_width="35pt"
            android:layout_height="35pt"
            android:text="."
            android:id="@+id/buttonPunto"
            android:gravity="fill"
            android:textAlignment="center"
            android:textColor="#fbf7f7"
            android:textStyle="bold"
            android:background="#0b0a0a"
            android:textSize="20pt"
            android:onClick="onClick" />

        <Button
            android:layout_width="50pt"
            android:layout_height="35pt"
            android:text="="
            android:id="@+id/buttonIgual"
            android:gravity="fill"
            android:textAlignment="center"
            android:textColor="#fbf7f7"
            android:textStyle="bold"
            android:background="#a8a3a3"
            android:textSize="20pt"
            android:onClick="onCalculate"
            android:visibility="visible" />

        <Button
            android:layout_width="40pt"
            android:layout_height="35pt"
            android:text="+"
            android:id="@+id/buttonMas"
            android:gravity="fill"
            android:textAlignment="center"
            android:textColor="#fbf7f7"
            android:textStyle="bold"
            android:background="#a8a3a3"
            android:textSize="20pt"
            android:onClick="onAdd" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="20pt"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_above="@+id/textView"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15pt"
        android:id="@+id/textView"
        android:background="#e5f5fc"
        android:layout_below="@+id/editText"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35pt"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">

        <Button
            android:layout_width="match_parent"
            android:layout_height="33pt"
            android:text="DELETE"
            android:id="@+id/button10"
            android:background="#a8a3a3"
            android:gravity="fill"
            android:textSize="18pt"
            android:textStyle="bold"
            android:textColor="#fefbfb"
            android:textAlignment="center"
            android:onClick="onClear" />
    </LinearLayout>

</RelativeLayout>
